<configuration>
    <appender name="ANDROID" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>%logger{12}</pattern>
        </tagEncoder>
        <encoder>
            <pattern>[%-20thread] %msg</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="ANDROID" />
    </root>
</configuration>

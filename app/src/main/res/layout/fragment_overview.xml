<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior"
    tools:context=".fragments.OverviewFragment">

    <de.lorenzgorse.coopmobile.LoadingView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone" />

    <LinearLayout
        android:id="@+id/layError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/layNoNetwork"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginBottom="10dip"
                android:src="@drawable/ic_offline_bolt"
                android:tint="@color/colorOnBackground1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_network" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layUpdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dip"
                    android:layout_marginBottom="10dip"
                    android:src="@drawable/ic_system_update"
                    android:tint="@color/colorOnBackground1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:gravity="center"
                    android:text="@string/update_necessary" />

                <Button
                    android:id="@+id/btGoToPlayStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/go_to_play_store" />
            </LinearLayout>

            <Button
                android:id="@+id/btSendDiagnostics"
                style="@style/QuietButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_diagnostics" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layPlanUnsupported"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginBottom="10dip"
                android:src="@drawable/ic_report"
                android:tint="@color/colorOnBackground1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/plan_unsupported" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/layContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.lorenzgorse.coopmobile.BannerView
                android:id="@+id/bannerRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/consumptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_list_padding" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:layout_marginBottom="5pt"
                android:gravity="center"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/profileProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TableLayout
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

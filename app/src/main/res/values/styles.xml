<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
    </style>

    <style name="BannerButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetBottom">0pt</item>
        <item name="android:insetTop">0pt</item>
        <item name="android:minHeight">0pt</item>
    </style>

    <style name="QuietButton">
        <item name="backgroundTint">@color/background1</item>
        <item name="android:textColor">@color/colorOnBackground1</item>
    </style>

    <style name="QuietText">
        <item name="android:textColor">@color/quietColorOnBackground1</item>
    </style>

    <style name="QuietText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">3pt</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textColorLink">@color/colorOnPrimary</item>
        <item name="drawableTint">@color/colorOnPrimary</item>
    </style>

</resources>
